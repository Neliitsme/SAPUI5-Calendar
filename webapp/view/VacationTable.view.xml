<mvc:View
	controllerName="sapui5calendar.controller.VacationTable"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	displayBlock="true"
>
	<Panel
		id="VacationTablePanel"
		headerText="{i18n>vacationTablePanelTitle}"
		class="sapUiResponsiveMargin"
		width="auto"
	>
		<content>
			<Table
				id="idProductsTable"
				items="{
					path: '/ProductCollection',
					sorter: {
						path: 'Name'
					}
				}"
			>
				<headerToolbar>
					<OverflowToolbar id="_IDGenOverflowToolbar1">
						<content>
							<Title
								id="_IDGenTitle1"
								text="{i18n>vacationTableName}"
								level="H2"
							/>
						</content>
					</OverflowToolbar>
				</headerToolbar>
				<infoToolbar>
				</infoToolbar>
				<columns>
					<Column
						id="_IDGenColumn1"
					>
						<Text
							id="_IDGenText1"
							text="{i18n>vacationStartDate}"
						/>
					</Column>
					<Column
						id="_IDGenColumn2"
					>
						<Text
							id="_IDGenText2"
							text="{i18n>vacationEndDate}"
						/>
					</Column>
					<Column
						id="_IDGenColumn3"
					>
						<Text
							id="_IDGenText3"
							text="{i18n>vacationTotalDaysAmount}"
						/>
					</Column>
					<Column
						id="_IDGenColumn4"
					>
						<Text
							id="_IDGenText4"
							text="{i18n>vacationWorkDaysAmount}"
						/>
					</Column>
				</columns>
				<items>
					<ColumnListItem
						id="_IDGenColumnListItem1"
						vAlign="Middle"
					>
						<cells>
							<ObjectIdentifier
								id="_IDGenObjectIdentifier1"
								title="{Name}"
								text="{ProductId}"
							/>
							<Text
								id="_IDGenText6"
								text="{SupplierName}"
							/>
							<Text
								id="_IDGenText7"
								text="{Width} x {Depth} x {Height} {DimUnit}"
							/>
							<ObjectNumber
								id="_IDGenObjectNumber1"
								number="{WeightMeasure}"
								unit="{WeightUnit}"
								state="{
									parts: [{
										path: 'WeightMeasure'
									}, {
										path: 'WeightUnit'
									}],
									formatter: 'sap.m.sample.Table.Formatter.weightState'
								}"
							/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
		<headerToolbar>
		</headerToolbar>
		<infoToolbar>
		</infoToolbar>
	</Panel>
</mvc:View>