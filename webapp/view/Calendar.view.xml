<mvc:View
	controllerName="sapui5calendar.controller.Calendar"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified"
	displayBlock="true"
	xmlns="sap.m"
>
	<Panel
		id="CalendarPanel"
		headerText="{i18n>calendarPanelTitle}"
		class="sapUiResponsiveMargin"
		width="auto"
	>
		<content>
			<l:VerticalLayout
				id="_IDGenVerticalLayout1"
				class="sapUiContentPadding"
			>
				<u:Calendar
					id="calendar"
					firstDayOfWeek="1"
					months="12"
					select="handleCalendarSelect"
					intervalSelection="true"
					weekNumberSelect="handleWeekNumberSelect"
					width="auto"
					showCurrentDateButton="true"
				/>
				<l:HorizontalLayout id="_IDGenHorizontalLayout2">
					<Label
						id="_IDGenLabel2"
						text="Selected From (yyyy-mm-dd):"
						class="labelMarginLeft"
					/>
					<Text
						id="selectedDateFrom"
						text="No Date Selected"
						class="labelMarginLeft"
					/>
				</l:HorizontalLayout>
				<l:HorizontalLayout id="_IDGenHorizontalLayout3">
					<Label
						id="_IDGenLabel3"
						text="Selected To (yyyy-mm-dd):"
						class="labelMarginLeft"
					/>
					<Text
						id="selectedDateTo"
						text="No Date Selected"
						class="labelMarginLeft"
					/>
				</l:HorizontalLayout>
			</l:VerticalLayout>
		</content>
	</Panel>
</mvc:View>