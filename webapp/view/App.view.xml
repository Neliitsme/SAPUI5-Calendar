<mvc:View
	controllerName="sapui5calendar.controller.App"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
>
	<Shell
		id="_IDGenShell1"
		appWidthLimited="true"
		backgroundColor=""
		backgroundImage=""
		backgroundOpacity="1"
		backgroundRepeat="false"
		headerRightText=""
		homeIcon=""
		logo=""
		showLogout="true"
		title=""
		titleLevel="H1"
	>
		<App id="_IDGenApp1">
			<pages>
				<Page
					id="_IDGenPage1"
					title="{i18n>homePageTitle}"
				>
					<headerContent>
						<Switch
							id="themeSwitch"
							customTextOff="️🌑"
							customTextOn="☀️"
							state="true"
							tooltip="Theme switch"
							change="handleThemeSwitch"
						/>
					</headerContent>
					<content>
						<mvc:XMLView
							id="_IDGenXMLView2"
							viewName="sapui5calendar.view.VacationTable"
						/>
						<mvc:XMLView
							id="_IDGenXMLView1"
							viewName="sapui5calendar.view.Calendar"
						/>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>